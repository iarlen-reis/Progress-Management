generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid()) @map("id")
  name        String
  description String
  deadline    DateTime
  progress    Int
  target      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  entries     Entry[]
}

model Entry {
  id          String   @id @default(uuid()) @map("id")
  name        String
  description String
  increment   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  taskId      String
  date        DateTime
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}
